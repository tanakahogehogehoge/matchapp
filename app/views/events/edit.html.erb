<h1>店舗またはスペース情報変更欄</h1>

<section class="function container-fluid">
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2 col-sm-offset-3 col-sm-6 col-sm-offset-3">
        <%= form_for(@event) do |f| %>
          <%= f.label :店舗またはスペースの住所 %>
          <%= f.text_field :store_address, class: 'form-control' %>
          <br>
          <%= f.label :店舗またはスペース情報 %>
          <%= f.text_area :store_info,  :size=>"90x10" %>
          <br>
          <%= f.label :店舗またはスペースの画像 %>
          <%= f.file_field :image, class: 'form-control' %>
          <br>
          <%= f.label :店舗またはスペースについての備考 %>
          <%= f.text_field :store_info_sub, class: 'form-control' %>
          <br>
          <%= f.submit '登録', class: 'btn btn-info btn-block' %>
        <% end %>
      </div>
    </div>
  </section>
